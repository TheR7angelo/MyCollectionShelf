<Button x:Class="MyCollectionShelf.Wpf.Ui.Common.Ui.Controls.Buttons.SvgButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:local="clr-namespace:MyCollectionShelf.Wpf.Ui.Common.Ui.Controls.Buttons"
             mc:Ignorable="d">
    
    <ContentControl>
        
        <svgc:SvgViewbox
            Source="{Binding ImageUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:SvgButton}}}" />
        
    </ContentControl>
    
</Button>
